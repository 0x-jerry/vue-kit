{
  "name": "@0x-jerry/vue-kit",
  "description": "Vue kit",
  "version": "2.1.0",
  "type": "module",
  "repository": {
    "type": "git",
    "url": "git+https://github.com/0x-jerry/vue-kit.git"
  },
  "keywords": [],
  "author": "",
  "license": "MIT",
  "bugs": {
    "url": "https://github.com/0x-jerry/vue-kit/issues"
  },
  "main": "./dist/index.js",
  "types": "./dist/index.d.ts",
  "homepage": "https://github.com/0x-jerry/vue-kit#readme",
  "publishConfig": {
    "registry": "https://registry.npmjs.org/",
    "access": "public"
  },
  "files": [
    "dist",
    "*.d.ts"
  ],
  "scripts": {
    "test": "vitest run",
    "test:watch": "vitest",
    "build": "tsup",
    "prepublishOnly": "npm run build",
    "lint": "biome lint src/**/* --write",
    "release": "x-release"
  },
  "tsup": {
    "entry": {
      "index": "src/lib.ts"
    },
    "clean": true,
    "format": "esm",
    "dts": true
  },
  "dependencies": {
    "@0x-jerry/utils": "^4.0.1",
    "@vitejs/plugin-vue": "^5.2.1",
    "@vitejs/plugin-vue-jsx": "^4.1.1",
    "@vueuse/core": "^12.0.0",
    "type-fest": "^4.30.2",
    "vue": "^3.5.13",
    "vue-component-type-helpers": "^2.1.10"
  },
  "devDependencies": {
    "@0x-jerry/x-release": "^2.2.2",
    "@biomejs/biome": "^1.9.4",
    "@types/node": "^22.10.2",
    "@vitest/coverage-v8": "^2.1.8",
    "@vue/test-utils": "^2.4.6",
    "@vue/tsconfig": "^0.7.0",
    "happy-dom": "^16.0.0",
    "jsdom": "^25.0.1",
    "tsup": "^8.3.5",
    "tsx": "^4.19.2",
    "typescript": "^5.7.2",
    "vitest": "^2.1.8"
  }
}